[Unit]
Description=Update Cloudflare DNS with external IP of this VM 
After=network-online.target
Wants=network-online.target

[Service]
Type=oneshot
ExecStart=/usr/local/bin/update-cloudflare-dns.sh

# Retry once if Cloudflare or metadata is briefly unavailable
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target